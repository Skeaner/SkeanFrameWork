<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 基础样式-->
    <style name="AppEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/preferDrawablePadding</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/preferButtonMinWidth</item>
        <item name="android:layout_height">@dimen/preferButtonHeight</item>
        <item name="android:background">@drawable/bg_primary_color</item>
    </style>

    <style name="AppImageButton">
        <item name="android:background">@drawable/bg_transparent_clickable</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="AppTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textcolor_normal</item>
    </style>

    <style name="AppTextAppearance.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/textcolor_normal</item>
    </style>

    <style name="AppTextAppearance.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/textcolor_normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/textcolor_normal</item>
    </style>

    <style name="AppTextAppearance.Inverse" parent="TextAppearance.AppCompat.Inverse">
        <item name="android:textColor">@color/textcolor_inverse</item>
    </style>

    <style name="AppTextAppearance.Large.Inverse" parent="TextAppearance.AppCompat.Large.Inverse">
        <item name="android:textColor">@color/textcolor_inverse</item>
    </style>

    <style name="AppTextAppearance.Small.Inverse" parent="TextAppearance.AppCompat.Small.Inverse">
        <item name="android:textColor">@color/textcolor_inverse</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTextAppearance.Medium.Inverse" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textColor">@color/textcolor_inverse</item>
    </style>

</resources>